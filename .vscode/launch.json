  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Nest Application",
      "env": {
        "NO_NODE_WARNINGS": "1"
      },
      "skipFiles": ["<node_internals>/**", "node_modules/**", "dist/**"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/secrets/.env",
      "program": "${workspaceFolder}/src/server.ts"
    }
  ]
}
